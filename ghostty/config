theme = Github Dark

# Manage splits with tmux like keybinds
keybind = super+h=goto_split:left
keybind = super+l=goto_split:right
keybind = super+j=goto_split:bottom
keybind = super+k=goto_split:top


# Manage tabs with tmux like keybinds
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>q=new_tab


# Create splits with tmux like keybinds
keybind = ctrl+a>s=new_split:right
keybind = ctrl+a>v=new_split:down


# Resize splits with tmux like keybinds
keybind = super+shift+h=resize_split:left,100
keybind = super+shift+l=resize_split:right,76
keybind = super+shift+j=resize_split:down,75
keybind = super+shift+k=resize_split:up,100


keybind = global:ctrl+q=toggle_quick_terminal
